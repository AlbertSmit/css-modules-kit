{
  "name": "honey-css-modules",
  "description": "The tool to make CSS Modules into first-class modules.",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "repository": "https://github.com/mizdra/honey-css-modules.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": true,
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build-watch": "npm run build -- --watch --preserveWatchOutput",
    "dev": "npm run build && node bin/hcm.js",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint --cache --cache-strategy content .",
    "lint:prettier": "prettier --cache --check .",
    "test": "vitest --project unit",
    "e2e": "run-s -c e2e:build e2e:vitest",
    "e2e:build": "npm run build",
    "e2e:vitest": "vitest --project e2e",
    "e2e-watch": "run-p build-watch 'e2e:vitest -- --clearScreen=false'"
  },
  "prettier": "@mizdra/prettier-config-mizdra",
  "devDependencies": {
    "@mizdra/eslint-config-mizdra": "^6.0.0",
    "@mizdra/inline-fixture-files": "^1.1.0",
    "@mizdra/prettier-config-mizdra": "^2.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "dedent": "^1.5.3",
    "eslint": "^9.14.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "hcm": "bin/hcm.js"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "files": [
    "bin",
    "src",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "!src/test",
    "dist"
  ],
  "dependencies": {
    "postcss": "^8.4.49",
    "postcss-selector-parser": "^7.0.0",
    "postcss-value-parser": "^4.2.0"
  }
}
