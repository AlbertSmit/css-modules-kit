{
  "name": "vscode-css-modules-kit",
  "displayName": "vscode-css-modules-kit",
  "description": "The VS Code extension for CSS Modules",
  "version": "0.0.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/css-modules-kit.git",
    "directory": "packages/vscode"
  },
  "author": "mizdra <pp.mizdra@gmail.com>",
  "publisher": "mizdra",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "@css-modules-kit/ts-plugin",
        "configNamespace": "typescript",
        "languages": [
          "css"
        ]
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "typescript.openTsServerLog",
          "when": "editorLangId == css"
        },
        {
          "command": "typescript.restartTsServer",
          "when": "editorLangId == css"
        }
      ]
    }
  },
  "dependencies": {
    "css-modules-kit-language-server": "../language-server",
    "@css-modules-kit/ts-plugin": "../ts-plugin",
    "vscode-languageclient": "^9.0.1"
  }
}
