{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5", // Simplify tsserver.log
    "lib": ["ES5"], // Simplify tsserver.log
    "module": "Preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "noEmit": true,
    "paths": { "@/*": ["./*"] },
    "rootDirs": ["src", "generated/src"],
    "types": [] // Simplify tsserver.log
  },
  "hcmOptions": {
    "pattern": "src/**/*.module.css",
    "dtsOutDir": "generated",
    "paths": { "@/*": ["./*"] }
  }
}
